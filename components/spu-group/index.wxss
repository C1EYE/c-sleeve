/* components/spu-group/index.wxss */
.title {
    width: 694rpx;
    height: 90rpx;
}

.container {
    padding: 42rpx 0 34rpx 28rpx;
    box-sizing: border-box;
    width: 100%;
}

.price-unit {
    font-size: 32rpx !important;

}

.price-value {
    font-size: 32rpx !important;
    font-weight: 800 !important;
}

.spu-img {
    width: 160rpx;
    height: 160rpx;
}

.spu-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 40rpx;
}

.scroll-view {
    margin-top: 28rpx;
    display: flex;
    flex-direction: row;

}

.inner {
    display: flex;
    flex-direction: row;
}

.spu-text {
    font-size: 20rpx;
    color: #666666;
    margin-top: 20rpx;

}
